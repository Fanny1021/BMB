<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
   >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="负压" />
        　

        <ImageView
            android:id="@+id/img_press"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/off"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"/>

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="冲洗" />
        　

        <ImageView
            android:id="@+id/img_wash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/off"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="冲桶" />
        　

        <ImageView
            android:id="@+id/img_push"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/off"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"/>

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="气泵" />
        　

        <ImageView
            android:id="@+id/img_airpump"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/off"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="水泵" />
        　

        <ImageView
            android:id="@+id/img_waterpump"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/off"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"/>

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="污阀" />
        　

        <ImageView
            android:id="@+id/img_dust"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/off"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="加热器" />
        　

        <ImageView
            android:id="@+id/img_heater"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/off"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"/>

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="暖风加热" />
        　

        <ImageView
            android:id="@+id/img_warmheat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/off"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">

    </LinearLayout>

</LinearLayout>